<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>EstiloRodante</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="icon" href="/images/logoPage.png" type="image/png">
</head>

<body>
  <%- include('./partial/header.ejs') %>

  <main class="container">
    <div class="d-flex" id="contenedor-principal">

      <!-- ASIDE: filtros -->
      <aside class="aside-fixed bg-white p-3 shadow-sm">
        <div class="fs-5 fw-bold mb-3 border-bottom pb-2">
          Cubiertas
        </div>
        <form class="filterForm d-flex flex-column gap-4">

          <!-- Filtro de Marca -->
          <div>
            <label for="types" class="form-label fw-semibold">Marca</label>
            <select class="form-select form-select-sm" id="types">
              <option value="Todos">Todos</option>
              <option value="Pirelli">Pirelli</option>
              <option value="Goodyear">Goodyear</option>
              <option value="Bridgestone">Bridgestone</option>
              <option value="Firestone">Firestone</option>
              <option value="Michelin">Michelin</option>
            </select>
          </div>

          <!-- Filtro de Tipo -->
          <div>
            <label for="brands" class="form-label fw-semibold">Tipo</label>
            <select class="form-select form-select-sm" id="brands">
              <option value="Todos">Todos</option>
              <option value="Llanta">Llanta</option>
              <option value="Cubierta">Neumático</option>
            </select>
          </div>

          <!--Filtro de Estado -->
          <div>
            <label for="estadoFiltro" class="form-label fw-semibold">Estado</label>
            <select class="form-select form-select-sm" id="estadoFiltro">
              <option value="Todos">Todos</option>
              <option value="Activo">Activos</option>
              <option value="Desactivado">Desactivados</option>
            </select>
          </div>

          <!-- Filtro de Precio -->
          <div>
            <label class="form-label fw-semibold">Precio</label>
            <div class="d-flex flex-column gap-3">
              <div class="mb-3">
                <label class="form-label fw-semibold mb-1">Mínimo</label>
                <div class="input-group input-group-sm">
                  <span class="input-group-text py-0 px-2 bg-light" style="height: 32px;">$</span>
                  <input type="number" class="form-control minPrice" placeholder="Precio mínimo" style="height: 32px;">
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label fw-semibold mb-1">Máximo</label>
                <div class="input-group input-group-sm">
                  <span class="input-group-text py-0 px-2 bg-light" style="height: 32px;">$</span>
                  <input type="number" class="form-control maxPrice" placeholder="Precio máximo" style="height: 32px;">
                </div>
              </div>
            </div>
          </div>

          <a class="btn btn-success" href="/agregar">Add new product</a>
        </form>
      </aside>

      <!-- MAIN: panel productos -->
    <main class="flex-grow-1 px-4 py-4 bg-light">
        <div class="modal-dialog modal-sm"></div>
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2>Panel</h2>
          <a class="btn btn-success" href="/agregar">Add new product</a>
        </div>

        <!-- Productos -->
        <div class="box row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
          <!-- Productos se renderizan desde JS -->
        </div>

        <!-- Paginación -->
        <nav>
          <ul id="pagination" class="pagination justify-content-center mt-4"></ul>
        </nav>
      </main>

    </div>
  </main>

  <!-- Modal de confirmación -->
  <div class="modal fade" id="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content rounded-4">
        <div class="modal-header">
          <h5 class="modal-title">Confirmar</h5>
          <button type="button" class="btn-close" aria-label="Close"></button>
        </div>
        <div class="modal-body"></div>
        <div class="modal-footer"></div>
      </div>
    </div>
  </div>

  <%- include('./partial/footer.ejs') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/scripts/dashboard.js"></script>
</body>