<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Lista de Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="icon" href="/images/logoPage.png" type="image/png">
</head>

<body class="light-mode d-flex flex-column min-vh-100">

    <%- include('../partial/header.ejs') %>

    <main class="container py-5 flex-grow-1">
        <h2 class="mb-4 text-center">Lista de Clientes</h2>
        <div class="mb-4 text-end">
        <select id="ordenar" class="form-select w-auto d-inline-block">
            <option value="">Ordenar</option>
            <option value="mas-reciente">Fecha: más reciente</option>
            <option value="mas-viejo">Fecha: más antiguo</option>
        </select>
        </div>
        <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody id="clientes-body">
                <tr>
                    <td colspan="2" class="text-center text-muted">Cargando clientes...</td>
                </tr>
            </tbody>
        </table>
        </div>
    </main>

    <%- include('../partial/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/clientes.js"></script>
</body>
</html>
