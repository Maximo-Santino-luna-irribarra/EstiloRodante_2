<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title>Registro de Ventas</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="icon" href="/images/logoPage.png" type="image/png"> 
</head>

<body class="light-mode d-flex flex-column min-vh-100">

<%- include('./partial/header.ejs') %>

<main class="container py-5 flex-grow-1">
    <h2 class="mb-4 text-center">Registro de Ventas</h2>

    <!-- Selector de orden -->
    <div class="mb-4 text-end">
        <form method="GET" action="/vista_ventas">
            <select name="orden" id="ordenar" class="form-select w-auto d-inline-block" onchange="this.form.submit()">
                <option value="">Ordenar</option>
                <option value="mas-reciente" <%= orden === 'mas-reciente' ? 'selected' : '' %>>Fecha: más reciente</option>
                <option value="mas-viejo" <%= orden === 'mas-viejo' ? 'selected' : '' %>>Fecha: más antiguo</option>
                <option value="ventas-caras" <%= orden === 'ventas-caras' ? 'selected' : '' %>>Venta: más cara</option>
                <option value="mas-vendidos" <%= orden === 'mas-vendidos' ? 'selected' : '' %>>Top 10 producto</option>
                <option value="ganancia" <%= orden === 'ganancia' ? 'selected' : '' %>>Mejor ganancia</option>
                <option value="logs" <%= orden === 'logs' ? 'selected' : '' %>>Logs</option>
            </select>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th><%= orden === 'logs' ? 'Administrador' : (orden === 'mas-vendidos' || orden === 'ventas-caras' || orden === 'ganancia' ? 'Producto' : 'Cliente') %></th>
                    <th><%= orden === 'logs' ? 'Email' : (orden === 'mas-vendidos' || orden === 'ventas-caras' || orden === 'ganancia' ? 'Marca / Detalles' : 'Productos') %></th>
                    <th><%= orden === 'logs' ? 'ID Log' : 'Total' %></th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                <% if (!datos || datos.length === 0) { %>
                    <tr>
                        <td colspan="5" class="text-center text-muted">No hay registros</td>
                    </tr>
                <% } else { %>
                    <% datos.forEach((item, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>

                        <% if (orden === 'logs') { %>
                            <td><%= item.admin?.nombre || 'Desconocido' %></td>
                            <td><%= item.admin?.email || '-' %></td>
                            <td>-</td>
                            <td><%= item.fecha ? new Date(item.fecha).toLocaleString('es-AR') : 'Sin fecha' %></td>

                        <% } else if (orden === 'mas-vendidos' || orden === 'ganancia') { %>
                            <td><%= item.producto?.nombre || 'Producto' %></td>
                            <td><%= item.producto?.marca || 'Marca no especificada' %></td>
                            <td>
                                <% if (orden === 'mas-vendidos') { %>
                                    <%= item.totalVendido %> unidades
                                <% } else { %>
                                    $<%= item.total_ganancia.toLocaleString() %>
                                <% } %>
                            </td>
                            <td>-</td>

                        <% } else if (orden === 'ventas-caras') { %>
                            <% const totalVenta = item.detalles?.reduce((acc,d)=>acc+d.subtotal,0) || 0; %>
                            <td><%= item.nombre_cliente %></td>
                            <td>
                                <ul style="padding-left:15px; margin:0;">
                                    <% item.detalles.forEach(detalle => { %>
                                        <li>
                                            <strong><%= detalle.producto?.nombre || 'Producto' %></strong> - Marca: <%= detalle.producto?.marca || 'No especificada' %> <br>
                                            Cantidad: <%= detalle.cantidad %> x $<%= detalle.precio_unitario %> = $<%= detalle.subtotal %>
                                        </li>
                                    <% }) %>
                                </ul>
                            </td>
                            <td>$<%= totalVenta.toLocaleString() %></td>
                            <td><%= item.fecha_venta ? new Date(item.fecha_venta).toLocaleDateString('es-AR') : '' %></td>

                        <% } else { %>
                            <td><%= item.nombre_cliente %></td>
                            <td>
                                <ul style="padding-left:15px; margin:0;">
                                    <% item.detalles.forEach(detalle => { %>
                                        <li>
                                            <strong><%= detalle.producto?.nombre || 'Producto' %></strong><br>
                                            Cantidad: <%= detalle.cantidad %> x $<%= detalle.precio_unitario %> = 
                                            <span class="text-success">$<%= detalle.subtotal %></span><br>
                                            <small class="text-muted">Marca: <%= detalle.producto?.marca || 'No especificada' %></small>
                                        </li>
                                    <% }) %>
                                </ul>
                            </td>
                            <td><strong>$<%= item.detalles.reduce((acc, d) => acc + d.subtotal, 0).toLocaleString() %></strong></td>
                            <td><%= item.fecha_venta ? new Date(item.fecha_venta).toLocaleDateString('es-AR') : '' %></td>
                        <% } %>
                    </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</main>

<%- include('./partial/footer.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
