<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Editar Producto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/loginStyle.css">
  <link rel="icon" href="/images/logoPage.png" type="image/png">
</head>
<body>
  <%- include('./partial/header.js') %>

<main class="container mt-5">
  <h1>Editar producto</h1>

  <form action="/productos/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="row g-3">
      <div class="col-md-6">
        <label class="form-label">Nombre</label>
        <input type="text" name="nombre" class="form-control" value="<%= producto.nombre %>">
      </div>
      <div class="col-md-6">
        <label class="form-label">Marca</label>
        <input type="text" name="marca" class="form-control" value="<%= producto.marca %>">
      </div>
      <div class="col-md-6">
        <label class="form-label">Modelo</label>
        <input type="text" name="modelo" class="form-control" value="<%= producto.modelo %>">
      </div>
      <div class="col-md-6">
        <label class="form-label">Precio</label>
        <input type="number" name="precio" class="form-control" value="<%= producto.precio %>">
      </div>
      <div class="col-12">
        <label class="form-label">Imagen</label>
        <input type="file" name="imagen" class="form-control">
      </div>
      <div class="col-md-6">
        <label class="form-label">Stock</label>
        <input type="number" name="stock" class="form-control" value="<%= producto.stock %>">
      </div>
      <div class="col-md-6">
        <label class="form-label">Medida</label>
        <input type="text" name="medida" class="form-control" value="<%= producto.medida %>">
      </div>
      <div class="text-center mt-4">
        <img src="<%= producto.urlIMG || '/logoPage.png' %>" class="img-fluid rounded mb-3" style="width: 300px; height: 200px; object-fit: cover;">
        <br>
        <button type="submit" class="btn btn-success px-5">
          <i class="bi bi-check-circle"></i> Guardar Cambios
        </button>
      </div>
    </div>
  </form>
</main>

<%- include('./partial/footer.js') %>

  <script src="/scripts/editar.js"></script>
</body>
</html>
