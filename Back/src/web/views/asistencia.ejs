<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Estadísticas - Panel Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin.css" />
</head>
<body class="bg-light">
  <%- include('./partial/header.ejs') %>

  <div class="container py-4">
    <header class="text-center mb-4">
      <h1 class="display-5">Estadísticas</h1>
    </header>

    <!-- Filtros -->
    <section class="mb-5">
      <div class="card shadow-sm">
        <div class="card-body">
          <form method="GET" action="/asistencia" class="row g-3 align-items-end">
            <div class="col-md-5">
              <label for="desde" class="form-label">Desde:</label>
              <input type="date" name="desde" value="<%= desde || '' %>" class="form-control" />
            </div>
            <div class="col-md-5">
              <label for="hasta" class="form-label">Hasta:</label>
              <input type="date" name="hasta" value="<%= hasta || '' %>" class="form-control" />
            </div>
            <div class="col-md-2 d-grid">
              <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
          </form>
        </div>
      </div>
    </section>

    <!-- Estadísticas -->
    <section class="mb-4">
      <div class="card text-white bg-success shadow-sm">
        <div class="card-body">
          <h2 class="card-title">Estadísticas</h2>
          <p class="card-text"><strong>Total encuestas:</strong> <%= total %></p>
          <p class="card-text"><strong>Puntaje promedio:</strong> <%= promedioPuntaje %></p>
        </div>
      </div>
    </section>

    <!-- Asistencias por día -->
    <section class="mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title">Asistencias por día</h3>
          <ul class="list-group list-group-flush mt-3">
            <% for (let dia in porDia) { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= dia %>
                <span class="badge bg-primary rounded-pill"><%= porDia[dia] %> asistencia(s)</span>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </section>

    <!-- Tabla de encuestas -->
    <section>
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title mb-3">Detalle de encuestas</h2>
          <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th>#</th>
                  <th>Fecha</th>
                  <th>Cliente</th>
                  <th>Puntuación</th>
                  <th>Comentarios</th>
                </tr>
              </thead>
              <tbody>
                <% encuestas.forEach((e, i) => { %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= e.createdAt ? e.createdAt.toISOString().split('T')[0] : 'Fecha no disponible' %></td>
                    <td><%= e.nombre || '—' %></td>
                    <td><%= e.puntuacion %></td>
                    <td><%= e.opinion || '—' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>
  </div>
  <%- include('./partial/footer.ejs') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
